# =============================================================================
# StartBot Backend â€” Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys.
# Only variables actively used by the codebase are listed here.
# =============================================================================

# --- Database ----------------------------------------------------------------
# Defaults to SQLite. Set to a PostgreSQL URL for production.
DATABASE_URL=sqlite:///./data/startbot.db

# --- Server ------------------------------------------------------------------
ENV=development
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- OpenAI (Market Research + Legal Document agents) ------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_COMPLETION_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_REQUEST_TIMEOUT=40

# --- Research APIs -----------------------------------------------------------
TAVILY_API_KEY=
SERPAPI_KEY=
EXA_API_KEY=

# --- Alai Slides API (Pitch Deck Generation) --------------------------------
ALAI_API_KEY=
ALAI_BASE_URL=https://slides-api.getalai.com/api/v1
ALAI_MAX_SLIDES=10

# --- Authentication ----------------------------------------------------------
JWT_SECRET=
JWT_EXPIRE_MINUTES=1440

# --- Email Verification (SMTP) ----------------------------------------------
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_VERIFICATION_SECRET=
FRONTEND_URL=http://localhost:3000

# --- Google OAuth 2.0 -------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
