# Exa.ai - For competitor analysis & market research competitor discovery
EXA_API_KEY=your-exa-key-here

# === OpenAI Configuration ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_COMPLETION_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_RESPONSE_FORMAT=json
OPENAI_REQUEST_TIMEOUT=40

# === Tavily === (Market Research Agent — primary research substrate)
TAVILY_API_KEY=

# Funding Enrichment — Provider-agnostic configuration
# Set FUNDING_PROVIDER to enable funding enrichment (leave empty for fallback mode)
FUNDING_PROVIDER=rapidapi

# RapidAPI — Used when FUNDING_PROVIDER=rapidapi
# Get your key at: https://rapidapi.com/
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_HOST=crunchbase-crunchbase-v1.p.rapidapi.com

# SerpApi - For reliable Google Trends data (no rate limits!)
# Get your key at: https://serpapi.com/
SERPAPI_KEY=your-serpapi-key-here

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=
JWT_EXPIRE_MINUTES=1440

# Email Verification (SMTP)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_VERIFICATION_SECRET=
FRONTEND_URL=http://localhost:3000

# Google OAuth 2.0
# Create credentials at https://console.cloud.google.com/apis/credentials
# IMPORTANT: GOOGLE_REDIRECT_URI must EXACTLY match the "Authorized redirect URI"
# configured in your Google Cloud Console (no trailing slash, correct port, http vs https).
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback

# =============================================================================
# Database (Optional — defaults to SQLite)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/startbot
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=startbot
# DATABASE_USER=postgres
# DATABASE_PASSWORD=

# =============================================================================
# Alai Slides API — Pitch Deck Generation
# =============================================================================
# Get your key at: https://getalai.com
# If ALAI_API_KEY is missing, pitch deck generation will FAIL (no fallback).
ALAI_API_KEY=
ALAI_BASE_URL=https://slides-api.getalai.com/api/v1
ALAI_MAX_SLIDES=10

# =============================================================================
# Server Configuration (Optional)
# =============================================================================
HOST=127.0.0.1
PORT=8000
DEBUG=true
